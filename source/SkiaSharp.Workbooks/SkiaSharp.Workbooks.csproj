<Project Sdk="Microsoft.NET.Sdk">

  <!-- for all/any platform -->
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <AssemblyName>SkiaSharp.Workbooks</AssemblyName>
    <RootNamespace>SkiaSharp.Workbooks</RootNamespace>
    <DefineConstants>$(DefineConstants);</DefineConstants>
    <GenerateAssemblyInfo>False</GenerateAssemblyInfo>
    <OutputDirectoryName>interactive</OutputDirectoryName>
    <PackageId>SkiaSharp.Workbooks</PackageId>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="MSBuild.Sdk.Extras" Version="1.2.2" PrivateAssets="All" />
    <PackageReference Include="Xamarin.Workbooks.Integration" Version="1.0.0-rc5" PrivateAssets="All" />
    <ProjectReference Include="..\..\binding\SkiaSharp\SkiaSharp.csproj" />
  </ItemGroup>

  <!-- for .net standard -->
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
  </ItemGroup>

  <Import Project="$(MSBuildSDKExtrasTargets)" Condition="Exists('$(MSBuildSDKExtrasTargets)')" />
  <Import Project="$(MSBuildThisFileDirectory)..\SkiaSharp.Build.targets" />

</Project>