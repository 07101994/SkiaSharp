<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(MSBuildThisFileDirectory)..\..\SkiaSharp.Build.props" />

  <PropertyGroup>
    <TargetFrameworks>net45</TargetFrameworks>
    <AssemblyName>SkiaSharp.Views.Gtk</AssemblyName>
    <RootNamespace>SkiaSharp.Views.Gtk</RootNamespace>
    <DefineConstants>$(DefineConstants);__DESKTOP__;__GTK__;</DefineConstants>
    <GenerateAssemblyInfo>False</GenerateAssemblyInfo>
    <OutputDirectoryName>gtk</OutputDirectoryName>
    <!-- Add the GAC to the search list as GTK# is installed to the GAC -->
    <AssemblySearchPaths>$(AssemblySearchPaths);{GAC}</AssemblySearchPaths>
    <PackageId>SkiaSharp.Views</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="Mono.Posix" SpecificVersion="false" />
    <Reference Include="gtk-sharp" SpecificVersion="false" />
    <Reference Include="gdk-sharp" SpecificVersion="false" />
    <Reference Include="glib-sharp" SpecificVersion="false" />
    <Reference Include="glade-sharp" SpecificVersion="false" />
    <Reference Include="pango-sharp" SpecificVersion="false" />
    <Reference Include="atk-sharp" SpecificVersion="false" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MSBuild.Sdk.Extras" Version="1.2.2" PrivateAssets="All" />
    <ProjectReference Include="..\..\..\binding\SkiaSharp\SkiaSharp.csproj" />
    <ProjectReference Include="..\SkiaSharp.Views.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\SkiaSharp.Views.Shared\Properties\SkiaSharpViewsAssemblyInfo.cs" />
  </ItemGroup>

  <Import Project="$(MSBuildSDKExtrasTargets)" Condition="Exists('$(MSBuildSDKExtrasTargets)')" />
  <Import Project="$(MSBuildThisFileDirectory)..\..\SkiaSharp.Build.targets" />

</Project>