<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(MSBuildThisFileDirectory)..\SkiaSharp.Build.props" />

  <PropertyGroup>
    <TargetFrameworks>net45</TargetFrameworks>
    <AssemblyName>SkiaSharp.Views.WPF</AssemblyName>
    <RootNamespace>SkiaSharp.Views.WPF</RootNamespace>
    <DefineConstants>$(DefineConstants);__DESKTOP__;__WPF__;</DefineConstants>
    <GenerateAssemblyInfo>False</GenerateAssemblyInfo>
    <OutputDirectoryName>wpf</OutputDirectoryName>
    <PackageId>SkiaSharp.Views</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MSBuild.Sdk.Extras" Version="1.2.2" PrivateAssets="All" />
    <ProjectReference Include="..\..\..\binding\SkiaSharp\SkiaSharp.csproj" />
    <ProjectReference Include="..\SkiaSharp.Views.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\SkiaSharp.Views.Shared\Properties\SkiaSharpViewsAssemblyInfo.cs" />
  </ItemGroup>

  <Import Project="$(MSBuildSDKExtrasTargets)" Condition="Exists('$(MSBuildSDKExtrasTargets)')" />
  <Import Project="$(MSBuildThisFileDirectory)..\..\SkiaSharp.Build.targets" />

</Project>