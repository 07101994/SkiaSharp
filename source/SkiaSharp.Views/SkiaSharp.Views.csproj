<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(MSBuildThisFileDirectory)..\SkiaSharp.Build.props" />

  <!-- for all/any platform -->
  <PropertyGroup>
    <TargetFrameworks></TargetFrameworks>
    <TargetFrameworks Condition=" '$(IsLinux)' == 'true' ">net45</TargetFrameworks>
    <TargetFrameworks Condition=" '$(IsWindows)' == 'true' ">net45;uap10.0.10240</TargetFrameworks>
    <TargetFrameworks Condition=" '$(IsMacOS)' == 'true' ">net45;MonoAndroid4.0.3;Xamarin.iOS10;Xamarin.TVOS10;Xamarin.WatchOS10;Xamarin.Mac20</TargetFrameworks>
    <DefineConstants>$(DefineConstants);</DefineConstants>
    <GenerateAssemblyInfo>False</GenerateAssemblyInfo>
    <EnableDefaultItems>false</EnableDefaultItems>
    <PackagingGroup>SkiaSharp.Views</PackagingGroup>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="MSBuild.Sdk.Extras" Version="1.2.2" PrivateAssets="All" />
    <ProjectReference Include="..\..\binding\SkiaSharp\SkiaSharp.csproj" />
    <Compile Include="SkiaSharp.Views.Shared\**\*.cs" />
    <Compile Remove="SkiaSharp.Views.Gtk\**\*" />
    <Compile Remove="SkiaSharp.Views.WPF\**\*" />
  </ItemGroup>

  <!-- for uwp -->
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('uap10')) ">
    <AssemblyName>SkiaSharp.Views.UWP</AssemblyName>
    <RootNamespace>SkiaSharp.Views.UWP</RootNamespace>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('uap10')) ">
    <PackageReference Include="Microsoft.NETCore.UniversalWindowsPlatform" Version="6.0.7" />
    <Compile Include="SkiaSharp.Views.UWP\**\*.cs" />
  </ItemGroup>

  <!-- for android -->
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
    <AssemblyName>SkiaSharp.Views.Android</AssemblyName>
    <RootNamespace>SkiaSharp.Views.Android</RootNamespace>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
    <Compile Include="SkiaSharp.Views.Android\**\*.cs" />
  </ItemGroup>

  <!-- for ios -->
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
    <AssemblyName>SkiaSharp.Views.iOS</AssemblyName>
    <RootNamespace>SkiaSharp.Views.iOS</RootNamespace>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
    <Compile Include="SkiaSharp.Views.Apple\**\*.cs" />
    <Compile Include="SkiaSharp.Views.AppleiOS\**\*.cs" />
    <Compile Include="SkiaSharp.Views.iOS\**\*.cs" />
  </ItemGroup>

  <!-- for tvos -->
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('Xamarin.TVOS')) ">
    <AssemblyName>SkiaSharp.Views.tvOS</AssemblyName>
    <RootNamespace>SkiaSharp.Views.tvOS</RootNamespace>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.TVOS')) ">
    <Compile Include="SkiaSharp.Views.Apple\**\*.cs" />
    <Compile Include="SkiaSharp.Views.AppleiOS\**\*.cs" />
    <Compile Include="SkiaSharp.Views.iOS\**\*.cs" />
  </ItemGroup>

  <!-- for watchos -->
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('Xamarin.WatchOS')) ">
    <AssemblyName>SkiaSharp.Views.watchOS</AssemblyName>
    <RootNamespace>SkiaSharp.Views.watchOS</RootNamespace>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.WatchOS')) ">
    <Compile Include="SkiaSharp.Views.Apple\**\*.cs" />
    <Compile Include="SkiaSharp.Views.AppleiOS\**\*.cs" />
    <Compile Include="SkiaSharp.Views.iOS\**\*.cs" />
  </ItemGroup>

  <!-- for macos -->
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('Xamarin.Mac')) ">
    <AssemblyName>SkiaSharp.Views.Mac</AssemblyName>
    <RootNamespace>SkiaSharp.Views.Mac</RootNamespace>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.Mac')) ">
    <Compile Include="SkiaSharp.Views.Apple\**\*.cs" />
    <Compile Include="SkiaSharp.Views.Mac\**\*.cs" />
  </ItemGroup>

  <!-- for .net -->
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('net4')) ">
    <DefineConstants>$(DefineConstants);__DESKTOP__</DefineConstants>
    <AssemblyName>SkiaSharp.Views.Desktop</AssemblyName>
    <RootNamespace>SkiaSharp.Views.Desktop</RootNamespace>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('net4')) ">
    <Reference Include="System.Windows.Forms" />
    <PackageReference Include="OpenTK" Version="1.1.2349.61993" />
    <PackageReference Include="OpenTK.GLControl" Version="1.1.2349.61993" />
    <Compile Include="SkiaSharp.Views.Desktop\**\*.cs" />
  </ItemGroup>

  <Import Project="$(MSBuildSDKExtrasTargets)" Condition="Exists('$(MSBuildSDKExtrasTargets)')" />
  <Import Project="$(MSBuildThisFileDirectory)..\SkiaSharp.Build.targets" />

</Project>