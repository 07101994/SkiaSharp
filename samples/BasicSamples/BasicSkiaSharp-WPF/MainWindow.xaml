<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicSkiaSharp"
        xmlns:Views="clr-namespace:SkiaSharp.Views;assembly=SkiaSharp.Views.Desktop" x:Class="BasicSkiaSharp.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label x:Name="label" Content="Software" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label x:Name="label1" Content="Hardware (OpenGL)" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold"/>
            <Views:SKElement Grid.Row="1" Margin="6" PaintSurface="SKElement_PaintSurface"/>
            <WindowsFormsHost Grid.Column="1" Margin="6" Grid.Row="1" Initialized="WindowsFormsHost_Initialized"/>
        </Grid>

    </Grid>
</Window>
