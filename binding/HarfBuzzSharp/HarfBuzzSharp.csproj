<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(MSBuildThisFileDirectory)..\..\source\SkiaSharp.Build.props" />

  <!-- for all/any platform -->
  <PropertyGroup>
    <TargetFrameworks></TargetFrameworks>
    <TargetFrameworks Condition=" '$(IsLinux)' == 'true' ">netstandard1.3;netstandard2.0;net45</TargetFrameworks>
    <TargetFrameworks Condition=" '$(IsWindows)' == 'true' ">netstandard1.3;netstandard2.0;net45;uap10.0.10240</TargetFrameworks>
    <TargetFrameworks Condition=" '$(IsMacOS)' == 'true' ">netstandard1.3;netstandard2.0;net45;MonoAndroid2.3;Xamarin.iOS10;Xamarin.TVOS10;Xamarin.WatchOS10;Xamarin.Mac20</TargetFrameworks>
    <AssemblyName>HarfBuzzSharp</AssemblyName>
    <RootNamespace>HarfBuzzSharp</RootNamespace>
    <DefineConstants>$(DefineConstants);HARFBUZZ</DefineConstants>
    <GenerateAssemblyInfo>False</GenerateAssemblyInfo>
    <EnableDefaultItems>false</EnableDefaultItems>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <PackagingGroup>HarfBuzzSharp</PackagingGroup>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="MSBuild.Sdk.Extras" Version="1.3.0-build.10.g401ca5a83c" PrivateAssets="All" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="..\Binding.Shared\**\*.cs" />
    <Compile Include="..\HarfBuzzSharp.Shared\**\*.cs" />
  </ItemGroup>

  <!-- for .net standard -->
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
    <DefineConstants>$(DefineConstants);NET_STANDARD</DefineConstants>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
    <PackageReference Include="System.IO.UnmanagedMemoryStream" Version="4.3.0" />
  </ItemGroup>

  <!-- for uwp -->
  <ItemGroup Condition=" $(TargetFramework.StartsWith('uap10')) ">
    <PackageReference Include="Microsoft.NETCore.UniversalWindowsPlatform" Version="6.0.7" />
    <None Include="..\..\native-builds\lib\uwp\x64\libHarfBuzzSharp.dll"
          Link="nuget\runtimes\win10-x64\nativeassets\uap10.0\libHarfBuzzSharp.dll"
          CopyToOutputDirectory="PreserveNewest" />
    <None Include="..\..\native-builds\lib\uwp\x86\libHarfBuzzSharp.dll"
          Link="nuget\runtimes\win10-x86\nativeassets\uap10.0\libHarfBuzzSharp.dll"
          CopyToOutputDirectory="PreserveNewest" />
    <None Include="..\..\native-builds\lib\uwp\ARM\libHarfBuzzSharp.dll"
          Link="nuget\runtimes\win10-arm\nativeassets\uap10.0\libHarfBuzzSharp.dll"
          CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <!-- for android -->
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
    <TargetFrameworkVersion Condition="'$(TargetFrameworkVersion)' == ''">v2.3</TargetFrameworkVersion>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
    <EmbeddedNativeLibrary Include="..\..\native-builds\lib\android\arm64-v8a\libHarfBuzzSharp.so"
                           Link="libs\arm64-v8a\libHarfBuzzSharp.so" />
    <EmbeddedNativeLibrary Include="..\..\native-builds\lib\android\armeabi-v7a\libHarfBuzzSharp.so"
                           Link="libs\armeabi-v7a\libHarfBuzzSharp.so" />
    <EmbeddedNativeLibrary Include="..\..\native-builds\lib\android\x86\libHarfBuzzSharp.so"
                           Link="libs\x86\libHarfBuzzSharp.so" />
    <EmbeddedNativeLibrary Include="..\..\native-builds\lib\android\x86_64\libHarfBuzzSharp.so"
                           Link="libs\x86_64\libHarfBuzzSharp.so" />
  </ItemGroup>

  <!-- for ios -->
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
    <IsBindingProject>true</IsBindingProject>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
    <NativeReference Include="..\..\native-builds\lib\ios\libHarfBuzzSharp.framework"
                     Kind="Framework" />
    <ObjcBindingApiDefinition Include="Dummy.cs" />
    <ObjcBindingCoreSource Include="Dummy.cs" />
  </ItemGroup>

  <!-- for tvos -->
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('Xamarin.TVOS')) ">
    <IsBindingProject>true</IsBindingProject>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.TVOS')) ">
    <NativeReference Include="..\..\native-builds\lib\tos\libHarfBuzzSharp.framework"
                     Kind="Framework" />
    <ObjcBindingApiDefinition Include="Dummy.cs" />
    <ObjcBindingCoreSource Include="Dummy.cs" />
  </ItemGroup>

  <!-- for watchos -->
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('Xamarin.WatchOS')) ">
    <IsBindingProject>true</IsBindingProject>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.WatchOS')) ">
    <NativeReference Include="..\..\native-builds\lib\watchos\libHarfBuzzSharp.framework"
                     Kind="Framework" />
    <ObjcBindingApiDefinition Include="Dummy.cs" />
    <ObjcBindingCoreSource Include="Dummy.cs" />
  </ItemGroup>

  <!-- for macos -->
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('Xamarin.Mac')) ">
    <IsBindingProject>true</IsBindingProject>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.Mac')) ">
    <ObjcBindingNativeLibrary Include="..\..\native-builds\lib\osx\libHarfBuzzSharp.dylib"
                              Link="libHarfBuzzSharp.dylib" />
    <ObjcBindingApiDefinition Include="Dummy.cs" />
    <ObjcBindingCoreSource Include="Dummy.cs" />
  </ItemGroup>

  <!-- for .net full -->
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('net4')) ">
    <DefineConstants>$(DefineConstants);DESKTOP</DefineConstants>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('net4')) ">
    <None Include="nuget\build\net45\HarfBuzzSharp.targets"
          CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <!-- the desktop native files -->
  <ItemGroup Condition=" $(TargetFramework.StartsWith('net4')) or $(TargetFramework.StartsWith('netstandard')) ">
    <!-- windows -->
    <None Include="..\..\native-builds\lib\windows\x64\libHarfBuzzSharp.dll"
          Link="nuget\runtimes\win7-x64\native\libHarfBuzzSharp.dll"
          Condition=" '$(IsWindows)' == 'true' "
          CopyToOutputDirectory="PreserveNewest" />
    <None Include="..\..\native-builds\lib\windows\x86\libHarfBuzzSharp.dll"
          Link="nuget\runtimes\win7-x86\native\libHarfBuzzSharp.dll"
          Condition=" '$(IsWindows)' == 'true' "
          CopyToOutputDirectory="PreserveNewest" />
    <!-- macos -->
    <None Include="..\..\native-builds\lib\osx\libHarfBuzzSharp.dylib"
          Link="nuget\runtimes\osx\native\libHarfBuzzSharp.dylib"
          Condition=" '$(IsMacOS)' == 'true' "
          CopyToOutputDirectory="PreserveNewest" />
    <!-- linux -->
    <None Include="..\..\native-builds\lib\linux\x64\libHarfBuzzSharp.so"
          Link="nuget\runtimes\linux-x64\native\libHarfBuzzSharp.so"
          Condition=" '$(IsLinux)' == 'true' "
          CopyToOutputDirectory="PreserveNewest" />
    <None Include="..\..\native-builds\lib\linux\x86\libHarfBuzzSharp.so"
          Link="nuget\runtimes\linux-x86\native\libHarfBuzzSharp.so"
          Condition=" '$(IsLinux)' == 'true' "
          CopyToOutputDirectory="PreserveNewest" />
    <None Include="..\..\native-builds\lib\linux\arm\libHarfBuzzSharp.so"
          Link="nuget\runtimes\linux-arm\native\libHarfBuzzSharp.so"
          Condition=" '$(IsLinux)' == 'true' "
          CopyToOutputDirectory="PreserveNewest" />
    <None Include="..\..\native-builds\lib\linux\arm64\libHarfBuzzSharp.so"
          Link="nuget\runtimes\linux-arm64\native\libHarfBuzzSharp.so"
          Condition=" '$(IsLinux)' == 'true' "
          CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <Import Project="$(MSBuildSDKExtrasTargets)" Condition="Exists('$(MSBuildSDKExtrasTargets)')" />
  <Import Project="$(MSBuildThisFileDirectory)..\..\source\SkiaSharp.Build.targets" />

</Project>